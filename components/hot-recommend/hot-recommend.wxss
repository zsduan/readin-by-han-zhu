.hot .hot-banner {
    height: 344rpx;
  }
  
  .hot .hot-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: calc(100% - 80rpx);
    margin: 0 40rpx;
  }
  
  .hot .swiper {
    margin-top: 30rpx;
  }
  
  .hot .hot-title .name {
    height: 45rpx;
    font-size: 38rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    line-height: 45rpx;
    color: #333333;
  }
  
  .hot .content .swiper-item {
    padding: 0 10rpx;
    width: calc(100% - 50rpx) !important;
    padding-left: 40rpx;
  }
  
  .hot .content .swiper-item .imgwrop {
    width: 195rpx;
    height: 283rpx;
    margin-top: 30rpx;
    position: relative;
    background : url("https://hanzhudushu.oss-cn-chengdu.aliyuncs.com/images/5/2021/05/b169dba0646a8526e79d8b43da3db5d0.png");
    background-size:100% 100%;
  }
  
  .hot .content .listen {
    height: 37rpx;
    background: linear-gradient(180deg, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.45) 100%);
    opacity: 1;
    border-radius: 0rpx 0rpx 6rpx 6rpx;
    position: absolute;
    bottom: 0rpx;
    width: 100%;
    font-size: 20rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 37rpx;
    color: #FFFFFF;
    text-align: center;
  }
  
  .hot .content .swiper-item .imgwrop-active {
    transform: scale(1.1);
    transition-duration: 0.3s;
    padding-left: 0rpx;
  }
  
  .hot .content .swiper-item .img {
    width: 100%;
    height: 100%;
  }
  
  .hot .bottom {
    padding-top: 10rpx;
    padding-left: 40rpx;
    padding-right: 40rpx;
  }
  
  .hot .bottom .name {
    font-size: 28rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    line-height: 37rpx;
    color: #333333;
  }
  
  .hot .bottom .details {
    font-size: 28rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    color: #999999;
    padding-top: 15rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .hot .content .swiper-active .listen {
    /* bottom: 25rpx !important; */
    width: 195rpx !important;
  }