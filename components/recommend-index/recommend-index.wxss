.type .line-20{
    height: 30rpx;
    border-radius: 0;
  }
  
  .type-top {
    width: calc(100% - 80rpx);
    margin: 40rpx;
  }
  
  .type .type-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .type .type-title .more {
    display: inline-block;
    height: 34rpx;
    font-size: 24rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    color: #999999;
    line-height: 35rpx;
    text-align: center;
  }
  
  .type .type-title .more .img {
    width: 17rpx;
    height: 17rpx;
  }
  
  .type .type-title .name {
    height: 45rpx;
    font-size: 38rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    line-height: 45rpx;
    color: #333333;
  }
  
  
  .type .top {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20rpx 0;
  }
  
  .type .top .imgwrop {
    width: 235rpx;
    height: 338rpx;
    border-radius: 6px;
    background : url("https://hanzhudushu.oss-cn-chengdu.aliyuncs.com/images/5/2021/05/b169dba0646a8526e79d8b43da3db5d0.png");
    background-size:100% 100%;
  }
  
  .type .top .imgwrop .img {
    width: 100%;
    height: 100%;
  }
  
  .type .top .right {
    width: calc(100% - 250rpx);
  }
  
  .type .top .right .names {
    font-size: 34rpx;
    font-family: Microsoft YaHei;
    font-weight: bold;
    line-height: 37rpx;
    color: #333333;
    padding-bottom: 10rpx;
  }
  
  .type .top .right .author {
    font-size: 24rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 31rpx;
    color: #333333;
    padding-top: 10rpx;
    margin-bottom: 40rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
  }
  
  .type .top .right .details {
    height: 103rpx;
    font-size: 28rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 36rpx;
    color: #999999;
    margin-bottom: 30rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .type .top .right .right-bottom {
    display: flex;
    justify-content: space-between;
  }
  
  .type .top .right .right-bottom .read {
    height: 24rpx;
    font-size: 24rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 24rpx;
    color: #999999;
    display: flex;
    align-items: center;
    padding-bottom: 40rpx;
  }
  
  .type .top .right .right-bottom .read .img {
    width: 18rpx;
    height: 18rpx;
  }
  
  .type .top .right .right-bottom .read .reading {
    display: inline-block;
    padding-left: 10rpx;
  }
  
  .type .top .right .right-bottom .time {
    font-size: 24rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 24rpx;
    color: #999999;
  }
  
  .type .content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
  }
  
  .type .content .item {
    display: flex;
    justify-content: space-between;
    /* align-items: center; */
    width: 48%;
    margin: 10rpx 0;
  }
  
  .type .content .item:first-child{
    margin-bottom: 30rpx;
    margin-top: 20rpx;
  }
  .type .content .item:nth-child(2){
    margin-bottom:30rpx ;
    margin-top: 20rpx;
  }
  
  .type .content .item .left {
    width: 125rpx;
    height: 180rpx;
    border-radius: 6px;
    background : url("https://hanzhudushu.oss-cn-chengdu.aliyuncs.com/images/5/2021/05/b169dba0646a8526e79d8b43da3db5d0.png");
    background-size:100% 100%;
  }
  
  .type .content .item .left .img {
    width: 100%;
    height: 100%;
  }
  
  .type .content .item .rights {
    width: calc(100% - 150rpx);
    padding-top: 20rpx;
  }
  
  .type .content .item .rights .names {
    font-size: 28rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 31rpx;
    color: #333333;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
  }
  
  .type .content .item .rights .details {
    font-size: 26rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    color: #999999;
    height: 70rpx;
    overflow: hidden;
    margin: 10rpx 0;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
  
  .type .content .item .rights .read {
    height: 24rpx;
    font-size: 22rpx;
    font-family: Microsoft YaHei;
    font-weight: 400;
    line-height: 24rpx;
    color: #999999;
    display: flex;
    align-items: center;
    padding-top: 20rpx;
  }
  
  .type .content .item .rights .read .img {
    width: 18rpx;
    height: 18rpx;
  }
  
  .type .content .item .rights .read .reading {
    display: inline-block;
    padding-left: 10rpx;
  }