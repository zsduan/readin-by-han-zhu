.icon {
    width: 120rpx;
    height: 120rpx;
    background: #ddd;
    border-radius: 50%;
    margin: 0 auto;
    overflow: hidden;
    margin-top: 50rpx;
}

.icon image {
    width: 120rpx;
    height: 120rpx;
}

.nikename {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    text-align: center;
    margin-top: 15rpx;
}

.tips {
    text-align: center;
    font-size: 26rpx;
    color: #CFCFCF;
}

.tel-wrop {
    width: 550rpx;
    height: 90rpx;
    border: 1px solid #CFCFCF;
    border-radius: 45rpx;
    overflow: hidden;
    margin: 0 auto;
    margin-top: 100rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20rpx 0 40rpx;
}

.tel-wrop input {
    font-size: 28rpx;
    width: 336rpx;
    height: 100%;
}

.tel-wrop .obtain {
    width: 178rpx;
    height: 57rpx;
    border: 1px solid #F16E22;
    border-radius: 45rpx;
    text-align: center;
    line-height: 57rpx;
    font-size: 26rpx;
    color: #F16E22;
}

.verification {
    margin-top: 30rpx;
}

.verification input {
    width: 100%;
}

.btns {
    width: 550rpx;
    height: 90rpx;
    background: #FE7221;
    border-radius: 45rpx;
    text-align: center;
    line-height: 90rpx;
    font-size: 30rpx;
    color: #FFFFFF;
    margin: 0 auto;
    margin-top: 90rpx;
}

.tel-wrop .obtain-null {
    border: 1px solid #ccc;
    color: #ccc;
}

.btn-cancel{
    background:transparent;
    border: 1px solid #ccc;
    color: #ccc;
    margin-top: 20rpx;
    width: 530rpx;
    height: 75rpx;
    line-height: 75rpx;
}
