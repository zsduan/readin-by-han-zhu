.search {
    height: 70rpx;
    background: #F6F6F6;
    width: calc(100% - 80rpx);
    display: flex;
    justify-content: space-between;
    justify-items: center;
    background: #F6F6F6;
    position: relative;
    margin: 0 40rpx;
    border-radius: 40rpx;
    /* margin-top: 150rpx; */
}

.search input {
    width: 80%;
    height: 100%;
    padding-left: 30rpx;
    font-size: 28rpx;
}

.search .searBtn {
    position: absolute;
    right: 32rpx;
    top: 15rpx;
}

.search .searBtn image {
    width: 28rpx;
    height: 28rpx;
}

.history {
    padding: 0 40rpx;
}

.history .title {
    display: flex;
    justify-content: space-between;
    padding: 40rpx 0 10rpx 0;
    align-items: center;
}

.history .title .name {
    font-size: 30rpx;
    font-weight: bold;
    line-height: 40rpx;
    color: #333333;
}

.history .title .open {
    font-size: 26rpx;
    line-height: 35rpx;
    color: #999999;
}

.history .content {
    display: flex;
    flex-wrap: wrap;
}

.history .content .item {
    height: 47rpx;
    background: #F6F6F6;
    border-radius: 24rpx;
    font-size: 26rpx;
    color: #333333;
    line-height: 47rpx;
    margin-right: 20rpx;
    margin-top: 30rpx;
    position: relative;
}

.history .content .item .left1 {
    padding: 0 20rpx;
}

.history .content .item .left2 {
    padding: 0 40rpx 0 20rpx;
}

.history .content .item .right {
    width: 26rpx;
    height: 26rpx;
    position: absolute;
    top: 4rpx;
    right: 10rpx;
}

.history .content-heigth {
    max-height: 152rpx;
    overflow: hidden;
}

.history .clear {
    font-size: 26rpx;
    color: #999999;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 30rpx;
}

.history .clear image {
    width: 25rpx;
    height: 28rpx;
}

.history .clear text {
    display: inline-block;
    padding-left: 18rpx;
}

.list {
    padding: 0 40rpx;
}

.list .tips {
    text-align: center;
    padding: 30rpx 0;
    color: #999;
    font-size: 26rpx;
}

.hot-search {
    padding: 0 40rpx;
}

.hot-search .title {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
    padding-top: 30rpx;
}

.hot-search .content {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.hot-search .content .item {
    width: 50%;
    padding-top: 20rpx;
}

.hot-search .content .item .key-id {
    font-size: 28rpx;
    width: 36rpx;
    display: inline-block;
    text-align: center;
    color: #333333;
}

.hot-search .content .item .key-word {
    font-size: 28rpx;
    color: #333333;
    padding-left: 10rpx;
}

.hot-search .content .item image {
    height: 28rpx;
    width: 24rpx;
    padding-left: 10rpx;
}