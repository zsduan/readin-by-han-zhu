.top{
    width: 100%;
    height: 30rpx;
    background: #F3F3F3;
}

.nav {
    width: 100%;
    height: 90rpx;
    background: #F6F6F6;
    line-height: 90rpx;
    display: flex;
    justify-content: space-between;
}

.nav .item {
    width: 50%;
    text-align: center;
    position: relative;
    font-size: 30rpx;
    color: #666;
}

.nav .item .line {
    width: 30rpx;
    height: 8rpx;
    background: #F16E22;
    border-radius: 7rpx;
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
}

.nav .active {
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
}

.book-list{
    padding: 0 40rpx;
    padding-top: 20rpx;
}
.empty {
    text-align: center;
    padding-top:277rpx;
}
.empty image{
    width: 440rpx;
}
