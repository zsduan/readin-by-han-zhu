.top-wrop {
    background: #F6F6F6;
    height: 506rpx;
    overflow: hidden;
    position: relative;
}

.top-wrop-vip{
    height: 436rpx;
}

.top-wrop .top {
    padding-top: 48rpx;
    display: flex;
    padding-bottom: 58rpx;
    padding-left: 40rpx;
    padding-right: 27rpx;
}

.top-wrop .top .left {
    width: 225rpx;
    height: 325rpx;
    background: rgba(0, 0, 0, 0);
    box-shadow: 0rpx 20rpx 16rpx #DCDCDC;
    border-radius: 6rpx;
}

.top-wrop .right {
    padding-left: 35rpx;
}

.top-wrop .right .title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333333;
}

.top-wrop .right .author {
    font-size: 30rpx;
    color: #999999;
    padding-top: 10rpx;
}

.top-wrop .right .intro {
    font-size: 30rpx;
    color: #666666;
    padding-top: 15rpx;
    height: 84rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    line-clamp: 2;
    -webkit-box-orient: vertical;

}



.top-wrop .top .left image {
    width: 225rpx;
    height: 325rpx;
}

.top-wrop .read-time {
    display: flex;
    font-size: 28rpx;
    color: #999999;
    align-items: center;
    padding: 20rpx 0;
}
.top-wrop .read-time .read{
    display: flex;
    align-items: center;

}

.top-wrop .read-time .read image {
    width: 28rpx;
    height: 28rpx;
    margin-right: 10rpx;
}

.top-wrop .read-time .time{
    display: inline-block;
    padding-left: 64rpx;
}

.top-wrop .btn {
    width: 203rpx;
    height: 54rpx;
    background: #FE7221;
    border-radius: 62rpx;
    font-size: 28rpx;
    color: #FFFFFF;
    display: flex;
    align-items: center;

}

.top-wrop .btn image {
    width: 25rpx;
    height: 28rpx;
    margin-right: 10rpx;
    margin-left: 29rpx;
}

.details-wrop{
    padding: 0 40rpx;
    /* box-shadow: 0px -2px 6px rgba(0, 0, 0, 0.16); */
}

.buy {
    padding-top: 33rpx;
    position: absolute;
    height: 73rpx;
    margin: 0 30rpx;
    bottom: -3rpx;
    width: 696rpx;
}

.buy .all-price {
    color: #81571F;
    font-weight: bold;
}

.buy image {
    height: 73rpx;
    position: absolute;
    top: 33rpx;
    width: 100%;
}

.buy .all-price-wrop {
    position: absolute;
    top: 50rpx;
    left: 79rpx;
    z-index: 10;
    font-size: 30rpx;
    color: #81571F;
    display: flex;
}

.continue-playing{
    position: absolute;
    height: 65rpx;
    margin: 0 30rpx;
    bottom: -3rpx;
    width: 642rpx; 
    background: #FFE0CE;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 27rpx;
}
.continue-playing .left{
    display: flex;
    align-items: center;
}

.continue-playing image{
    width: 30rpx;
    height: 30rpx;
}

.continue-playing .continue-playing-num{
    font-size: 28rpx;
    padding-left: 20rpx;
    width: 393rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
}

.continue-playing .btns{
    width: 151rpx;
    height: 38rpx;
    border: 1rpx solid #FE7221;
    border-radius: 19rpx;
    text-align: center;
    line-height: 38rpx;
    font-size: 24rpx;
    color: #FE7221;
    margin-right: 20rpx;
}

.list-title {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-top: 40rpx;
}

.list-title .name {
    font-size: 38rpx;
    font-weight: bold;
    color: #333333;
}

.list-title .right {
    font-size: 26rpx;
    color: #999999;
}

.list .item {
    padding-top: 40rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
    border-bottom: 1px solid #E8E8E8;
    padding-bottom: 20rpx;
}

.list .item .top {
    display: flex;
    align-items: center;
}

.list .item .top .name {
    font-size: 34rpx;
    color: #333333;
    display: inline-block;
    max-width: 520rpx;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
}

.list .item .top .tips {
    display: inline-block;
    background: #FE7221;
    border-radius: 0rpx 8rpx 0rpx 8rpx;
    font-size: 24rpx;
    color: #FFFFFF;
    height: 34rpx;
    line-height: 34rpx;
    padding: 0 4rpx;
    margin-left: 20rpx;
}

.list .item .left image {
    width: 28rpx;
    height: 28rpx;
}

.list .item .left .bottom {
    display: flex;
    align-items: center;
    font-size: 26rpx;
    color: #999999;
    padding-top: 10rpx;
}

.list .item .bottom .bottom-left {
    display: flex;
    align-items: center;
}

.list .item .bottom .bottom-left text {
    padding-left: 10rpx;
}

.list .item .bottom .bottom-right {
    padding-left: 40rpx;
}

.list .item .right image {
    width: 45rpx;
    height: 45rpx;
}

.empty {
    text-align: center;
    font-size: 24rpx;
    color: #999;
    padding-top: 20rpx;
    padding-bottom: 20rpx;
}