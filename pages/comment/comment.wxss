.page {
    padding: 0 40rpx;
}

.top-wrop {
    padding-top: 48rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

.top-wrop .userInfo {
    font-size: 28rpx;
    color: #333;
}

.top-wrop .userInfo .nikename {
    color: #1A83CC;
}

.top-wrop .title {
    font-size: 34rpx;
    font-weight: bold;
    color: #333333;
    width: calc(100% - 200rpx);
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
}

.top-wrop .btns {
    width: 143rpx;
    height: 60rpx;
    background: #FE7221;
    border-radius: 38rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 30rpx;
    color: #FFFFFF;
}

.content {
    width: 637rpx;
    height: 340rpx;
    font-size: 30rpx;
    margin: 0 auto;
    margin-top: 40rpx;
}

.content textarea {
    width: 100%;
    height: 100%;
}

.bottom-wrops {
    position: fixed;
}

.bottom-wrops .tips {
    font-size: 24rpx;
    color: #999;
}

.bottom-wrop {
    background: #F5F5F5;
    display: flex;
    width: 590rpx;
    justify-content: space-between;
    padding: 20rpx 40rpx;
    align-items: center;
}

.bottom-wrop .left .top {
    display: flex;
    align-items: center;
}

.bottom-wrop .left .icon {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    overflow: hidden;
    background: url("https://hanzhudushu.oss-cn-chengdu.aliyuncs.com/images/5/2021/04/57e4321c15e799f43dc0fe7b0dfc093f.png");
    background-size: 100% 100%;
}

.bottom-wrop .left .icon image {
    width: 60rpx;
    height: 60rpx;
}

.bottom-wrop .left .nikename {
    padding-left: 20rpx;
    font-size: 30rpx;
    font-weight: bold;
    color: #333333;
}

.bottom-wrop .left .bottom {
    width: 531rpx;
    font-size: 26rpx;
    color: #666666;
    text-overflow: -o-ellipsis-lastline;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 1;
    line-clamp: 1;
    -webkit-box-orient: vertical;
}

.bottom-wrop .right image {
    width: 23rpx;
    height: 23rpx;
    transform: rotate(270deg);
}