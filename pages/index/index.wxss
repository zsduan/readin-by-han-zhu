  font-size: 26rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
}

.nav .open .title .imgwrop {
  transform: rotate(180deg);
}

.nav .open .title image {
  width: 30rpx;
  height: 30rpx;
}

