.nav {
  width: calc(100% - 80rpx);
  padding: 20rpx 40rpx;
  position: relative;
}

/* nav定位 */
.nav-top {
  position: fixed;
  top: 0;
  background: #fff;
  z-index: 10;
}

.nav .list {
  white-space: nowrap;
}

.nav .list .item {
  display: inline-block;
  font-size: 30rpx;
  font-family: Microsoft YaHei;
  font-weight: 400;
  color: #666666;
  margin-right: 45rpx;
}

.nav .list .item :last-child {
  margin-right: 0;
}

.nav .list .active-wrop {
  width: 100%;
  text-align: center;
  height: 18rpx;
  padding-top: 10rpx;
  position: relative;
}

