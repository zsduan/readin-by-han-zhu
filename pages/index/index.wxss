  right: 40rpx;
  background-color: #fff;
  top: 18rpx;
  width: 40rpx;
  height: 60rpx;
  text-align: center;
}

.nav .down-selct image {
  width: 30rpx;
  height: 30rpx;
}

.nav .open {
  padding: 40rpx;
  padding-top: 30rpx;
  background: #fff;
}


